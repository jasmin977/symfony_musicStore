    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ song.id) }}">
   
 <button class="btn btn-danger btn-lg btn-block"> <i class="fa fa-trash" aria-hidden="true"></i> Delete </button>
 <br><br><br><br>
</form>
